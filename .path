pathmunge () {
    case ":${PATH}:" in
        *:"$1":*)
            ;;
        *)
            if [ "$2" = "after" ] ; then
                PATH=$PATH:$1
            else
                PATH=$1:$PATH
            fi
    esac
}

# Add `~/bin` to the `$PATH`
pathmunge "$HOME/bin"

# Add rbenv to the path
pathmunge "$HOME/.rbenv/bin"

# Add nodenv to the path
pathmunge "$HOME/.nodenv/bin"

# Add go bin to the path
pathmunge "$GOPATH/bin"

# load any local path changes
[ -r .path.local ] && source .path.local

unset pathmunge
